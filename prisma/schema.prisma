generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  VISITOR
  CONTRIBUTOR
  ADMIN
}

enum Status {
  DONNER
  CANDIDATE
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  phone    String?
  password String
  role     Role       @default(VISITOR)
  donner   Donner[]
  hospital Hospital[]
}

// Define the data model for donors
model Donner {
  id          Int     @id @default(autoincrement())
  Area        String
  bloodType   String
  dateOfBirth String?
  lastDonate  String?
  status      Status  @default(CANDIDATE)
  user        User?   @relation(fields: [userId], references: [id])
  userId      Int?    @unique
}

model Hospital {
  id             Int              @id @default(autoincrement())
  name           String
  address        String
  phone          String?
  bloodInventory BloodInventory[]
  User           User?            @relation(fields: [userId], references: [id])
  userId         Int?
}

// Define the data model for blood inventory
model BloodInventory {
  id         Int      @id @default(autoincrement())
  bloodGroup String
  bloodUnits Int
  hospital   Hospital @relation(fields: [hospitalId], references: [id])
  hospitalId Int
}
